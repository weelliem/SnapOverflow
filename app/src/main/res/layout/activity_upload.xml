<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <import type="com.mad.snapoverflow.viewmodel.CameraFragmentViewModel"/>

        <variable
            name="UploadViewModel"
            type="com.mad.snapoverflow.viewmodel.UploadViewModel"/>

        <variable
            name="CameraViewModel"
            type="com.mad.snapoverflow.viewmodel.CameraFragmentViewModel"/>

        <variable
            name="MapViewModel"
            type="com.mad.snapoverflow.viewmodel.MapFragmentViewModel"/>

    </data>



<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/progress"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/tempImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:scaleType="fitXY"
       />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Title" />

            <TextView
                android:id="@+id/GPS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS" />

            <TextView
                android:id="@+id/timeDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time/Date" />

            <EditText
                android:id="@+id/contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/uploadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="upload" />

                <Button
                    android:id="@+id/backBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="back" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>